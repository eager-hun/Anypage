<ul class="accordion {{ wrapper_extra_classes }}" data-accordion>
  {% for item in items %}
    <li class="accordion-item {{ item['extra_classes'] }}" data-accordion-item>
      <a href="#" class="accordion-title">
        {{ item['title'] }}
      </a>
      <div class="accordion-content" data-tab-content>
        {{ item['content'] }}
      </div>
    </li>
  {% endfor %}
</ul>

